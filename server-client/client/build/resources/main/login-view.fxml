<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.controller.LoginController"
            prefWidth="400" prefHeight="250">

    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">
        <Label text="Autentificare Festival" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

        <Button text="Login"
                onAction="#onLoginClick"
                maxWidth="100"/>
    </VBox>
</AnchorPane>